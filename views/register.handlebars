<link rel="stylesheet" href="./css/register-style.css"/> 
<!-- hero section -->
<section class="hero is-small is-light hero-background-image">
    <div class="hero-body columns is-3">
        <div class="column">
            <div class="card p-6 has-background-light">
                <h2 class="card-header-title is-size-3 is-italic has-text-centered">{{registerText}}</h2>
                <div class="card-content is-size-5 has-text-weight-semibold">
                    <div>
                        <p>Username:</p>
                        <input type="text" id="username-input">
                    </div>

                    <div action="/url" method="GET">
                        <p>Password:</p>
                        <input type="text" id="password-input">
                    </div>

                    <button class="btn button is-primary" type="submit" id="register-btn" data-register-variant="{{registerVariant}}">{{registerText}}</button>
                    <a type="button" href="/register?variant={{altRegisterVariant}}">{{altRegisterText}}</a>

                    <script src="./js/register.js"></script>
                </div>
            </div> 
        </div>
    </div>
</section>